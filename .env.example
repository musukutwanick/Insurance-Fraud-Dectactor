# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./crossinsure.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/insurance_fraud_db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_TITLE=CrossInsure AI
API_VERSION=1.0.0
API_DESCRIPTION=AI-Powered Insurance Fraud Detection System

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Model Selection
GEMINI_MODEL=gemini-1.5-flash
# Options: gemini-1.5-flash (faster, cheaper) or gemini-1.5-pro (more capable)

GEMINI_EMBEDDING_MODEL=models/text-embedding-004
GEMINI_VISION_MODEL=gemini-1.5-flash

# Gemini Generation Parameters
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192
